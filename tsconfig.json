{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "jsx": "react",
    "outDir": "./dist/",
    "noImplicitAny": true,
    "moduleResolution": "node"
  },
  "include": [
    "./src/**/*.tsx"
  ]
}
